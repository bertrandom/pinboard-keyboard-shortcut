{

  "manifest_version": 2,

  "name": "Pinboard Keyboard Shortcut",
  "description": "Bookmark the current page to Pinboard via a keyboard shortcut",
  "version": "1.0",

  "background": {
    "scripts": ["bookmark.js"],
    "persistent": true
  },

  "permissions": [
    "tabs"
  ],

  "icons": { "16": "img/icon16.png",
             "48": "img/icon48.png",
            "128": "img/icon128.png" },  

  "commands": {
    "bookmark-on-pinboard": {
      "suggested_key": {
        "default": "Ctrl+D",
        "mac": "Command+D",
        "linux": "Ctrl+D"
      },
      "description": "Bookmark the current page on Pinboard"
    }
  }  

}
